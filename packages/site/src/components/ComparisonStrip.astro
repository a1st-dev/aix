---
import { Icon } from 'astro-icon/components';

/**
 * Visual before/after strip showing config file consolidation.
 * "6 files â†’ 1 file" reduction message.
 */
const beforeFiles = [
  '.cursor/rules',
  '.github/copilot-instructions.md',
  '.windsurf/rules',
  '.claude/CLAUDE.md',
  '.zed/settings.json',
  'AGENTS.md',
];
---

<div class="comparison-strip">
  <div class="comparison-strip__before">
    <span class="comparison-strip__heading">Before</span>
    <div class="comparison-strip__files">
      {beforeFiles.map((f, i) => (
        <span
          class="comparison-strip__file comparison-strip__file--old"
          style={`animation-delay: ${0.6 + i * 0.06}s`}
        >
          {f}
        </span>
      ))}
    </div>
  </div>

  <div class="comparison-strip__arrow" aria-hidden="true">
    <Icon name="lucide:arrow-right" />
  </div>

  <div class="comparison-strip__after">
    <span class="comparison-strip__heading">After</span>
    <div class="comparison-strip__files">
      <span class="comparison-strip__file comparison-strip__file--new">
        ai.json
      </span>
    </div>
  </div>
</div>

<style>
  .comparison-strip {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2.5rem 1.5rem;
    background: var(--aix-surface-sunken);
    border: 1px solid var(--sl-color-hairline-shade);
    border-radius: 12px;
    max-width: 760px;
    margin: 0 auto;
    opacity: 0;
    animation: stripReveal 0.6s ease 0.8s forwards;
  }
  .comparison-strip__heading {
    display: block;
    font-family: var(--sl-font-system-mono);
    font-size: 0.7rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--sl-color-gray-4);
    margin-bottom: 0.6rem;
    text-align: center;
  }
  .comparison-strip__files {
    display: flex;
    flex-direction: column;
    gap: 4px;
    align-items: center;
  }
  .comparison-strip__file {
    font-family: var(--sl-font-system-mono);
    font-size: 0.72rem;
    padding: 3px 10px;
    border-radius: 4px;
    white-space: nowrap;
    opacity: 0;
    animation: fileReveal 0.3s ease forwards;
  }
  .comparison-strip__file--old {
    background: var(--aix-error-subtle);
    color: var(--aix-error);
    border: 1px solid var(--aix-error-border);
    text-decoration: line-through;
    text-decoration-color: var(--aix-error-muted);
  }
  .comparison-strip__file--new {
    background: var(--aix-success-subtle);
    color: var(--aix-success);
    border: 1px solid var(--aix-success-border);
    font-size: 0.95rem;
    font-weight: 600;
    padding: 8px 20px;
    animation-delay: 1s;
  }
  .comparison-strip__arrow {
    flex-shrink: 0;
    width: 40px;
    height: 24px;
    color: var(--sl-color-accent);
    opacity: 0;
    animation: arrowReveal 0.4s ease 0.9s forwards;
  }

  @keyframes stripReveal {
    from {
      opacity: 0;
      transform: scale(0.97);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  @keyframes fileReveal {
    from {
      opacity: 0;
      transform: translateX(-6px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes arrowReveal {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 600px) {
    .comparison-strip {
      flex-direction: column;
      gap: 1.2rem;
    }
    .comparison-strip__arrow {
      transform: rotate(90deg);
    }
  }
</style>
