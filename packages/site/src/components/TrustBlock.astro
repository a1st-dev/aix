---
const editors = [
   { name: 'Claude Code', icon: '/icons/claude-color.svg', colored: true },
   { name: 'Cursor', icon: '/icons/cursor.svg', colored: false },
   { name: 'VS Code', icon: '/icons/vscode-color.svg', colored: true },
   { name: 'Windsurf', icon: '/icons/windsurf.svg', colored: false },
   { name: 'Codex', icon: '/icons/openai.svg', colored: false },
   { name: 'Zed', icon: '/icons/zed.svg', colored: true },
];
---

<section class="trust-block relative border-y border-gray-800/50 bg-gray-900/30 py-12 overflow-hidden">
   <!-- Subtle background gradient -->
   <div class="absolute inset-0 bg-gradient-to-b from-transparent via-accent-950/5 to-transparent"></div>

   <div class="relative mx-auto max-w-5xl px-6">
      <p class="mb-8 text-center text-sm font-semibold uppercase tracking-[0.2em] text-gray-300">
         Works with your editor
      </p>
      <div class="grid grid-cols-3 gap-8 md:grid-cols-6">
         {editors.map((editor, index) => (
            <div
               class="trust-block__editor group flex flex-col items-center gap-2"
               style={`animation: fadeInUp 0.6s ease-out ${index * 0.1}s both`}
            >
               <div class="flex size-14 items-center justify-center rounded-xl border border-gray-800/70 bg-gray-900/50 transition-all duration-300 group-hover:-translate-y-1 group-hover:scale-110 group-hover:border-accent-500/50 group-hover:bg-gray-900 group-hover:shadow-[0_0_20px_rgba(94,234,212,0.2)]">
                  <img src={editor.icon} alt={editor.name} class:list={['size-7', { 'editor-icon-mono': !editor.colored }]} />
               </div>
               <span class="text-xs font-medium text-gray-500 transition-colors group-hover:text-accent-300">
                  {editor.name}
               </span>
            </div>
         ))}
      </div>
   </div>
</section>

<style>
   @keyframes fadeInUp {
      from {
         opacity: 0;
         transform: translateY(20px);
      }
      to {
         opacity: 1;
         transform: translateY(0);
      }
   }

   /* Make monochrome icons visible on dark background */
   .editor-icon-mono {
      filter: brightness(0) invert(1);
   }
</style>
