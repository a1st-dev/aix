---
interface Props {
   class?: string;
}

const { class: className } = Astro.props;

let stars: number | null = null;

try {
   const response = await fetch('https://api.github.com/repos/a1st-dev/aix', {
      headers: {
         Accept: 'application/vnd.github.v3+json',
         'User-Agent': 'aix-site',
      },
   });

   if (response.ok) {
      const data = await response.json();
      stars = data.stargazers_count;
   }
} catch {
   stars = null;
}

const showStars = stars !== null && stars > 100;
---

{showStars && (
   <a
      href="https://github.com/a1st-dev/aix"
      class:list={[
         'github-stars inline-flex items-center gap-1.5 rounded-full border border-gray-700 bg-gray-800/50 px-3 py-1 text-sm text-gray-300 transition-colors hover:border-gray-600 hover:bg-gray-800',
         className,
      ]}
   >
      <svg class="size-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
         <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
      </svg>
      <span>{stars!.toLocaleString()}</span>
   </a>
)}
