---
import Hero from '../components/Hero.astro';
import TrustBlock from '../components/TrustBlock.astro';
import FeatureBlock from '../components/FeatureBlock.astro';
import FAQ from '../components/FAQ.astro';
import FinalCTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const title = 'aix - One config file. Every AI editor.';
const description = 'Define your AI agent configuration once in ai.json. Install to Claude Code, Cursor, VS Code, Windsurf, and more.';
---

<!doctype html>
<html lang="en" data-theme="dark">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>{title}</title>
      <meta name="description" content={description} />

      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:image" content="/og-image.png" />
      <meta property="og:type" content="website" />
      <meta property="og:url" content="https://aix.a1st.dev" />

      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:title" content={title} />
      <meta name="twitter:description" content={description} />
      <meta name="twitter:image" content="/og-image.png" />

      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
   </head>
   <body class="min-h-screen bg-gray-950 text-gray-100 antialiased">
      <header class="fixed inset-x-0 top-0 z-50 border-b border-gray-800/50 bg-gray-950/80 backdrop-blur-lg">
         <nav class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
            <a href="/" class="flex items-center gap-2 text-xl font-bold text-gray-50">
               <svg class="size-6 text-accent-500" viewBox="0 0 128 128" fill="currentColor">
                  <path fill-rule="evenodd" d="M81 36 64 0 47 36l-1 2-9-10a6 6 0 0 0-9 9l10 10h-2L0 64l36 17h2L28 91a6 6 0 1 0 9 9l9-10 1 2 17 36 17-36v-2l9 10a6 6 0 1 0 9-9l-9-9 2-1 36-17-36-17-2-1 9-9a6 6 0 1 0-9-9l-9 10v-2Zm-17 2-2 5c-4 8-11 15-19 19l-5 2 5 2c8 4 15 11 19 19l2 5 2-5c4-8 11-15 19-19l5-2-5-2c-8-4-15-11-19-19l-2-5Z" clip-rule="evenodd"/>
                  <path d="M118 19a6 6 0 0 0-9-9l-3 3a6 6 0 1 0 9 9l3-3Zm-96 4c-2 2-6 2-9 0l-3-3a6 6 0 1 1 9-9l3 3c3 2 3 6 0 9Zm0 82c-2-2-6-2-9 0l-3 3a6 6 0 1 0 9 9l3-3c3-2 3-6 0-9Zm96 4a6 6 0 0 1-9 9l-3-3a6 6 0 1 1 9-9l3 3Z"/>
               </svg>
               aix
            </a>
            <div class="flex items-center gap-6">
               <a href="/getting-started/installation/" class="text-sm text-gray-400 transition-colors hover:text-gray-100">
                  Docs
               </a>
               <a href="https://github.com/a1st-dev/aix" class="text-sm text-gray-400 transition-colors hover:text-gray-100">
                  GitHub
               </a>
            </div>
         </nav>
      </header>

      <main class="pt-16">
         <Hero />
         <TrustBlock />
         <FeatureBlock />
         <FAQ />
         <FinalCTA />
      </main>

      <Footer />
   </body>
</html>
