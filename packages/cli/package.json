{
   "name": "@a1st/aix",
   "version": "0.0.0",
   "description": "CLI for aix - unified AI agent configuration",
   "bin": {
      "aix": "./bin/run.js"
   },
   "files": [
      "bin",
      "dist",
      "oclif.manifest.json",
      "theme.json"
   ],
   "type": "module",
   "main": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "publishConfig": {
      "access": "public",
      "registry": "https://registry.npmjs.org/"
   },
   "scripts": {
      "prepack": "npm run build",
      "build": "tsc -p tsconfig.build.json && npm run manifest",
      "manifest": "oclif manifest",
      "dev": "node --loader ts-node/esm bin/dev.js",
      "test": "vitest run",
      "test:watch": "vitest"
   },
   "dependencies": {
      "@a1st/aix-core": "*",
      "@a1st/aix-schema": "*",
      "@a1st/mcp-registry-client": "*",
      "@inquirer/prompts": "^8.2.0",
      "@oclif/core": "^4.2.10",
      "@oclif/plugin-autocomplete": "^3.2.25",
      "@oclif/plugin-help": "^6.2.27",
      "@oclif/plugin-not-found": "^3.2.39",
      "@oclif/plugin-update": "^4.7.4",
      "@oclif/plugin-version": "^2.2.24",
      "@oclif/table": "0.5.1",
      "chalk": "^5.4.1",
      "ink": "6.6.0",
      "ink-spinner": "5.0.0",
      "ink-text-input": "6.0.0",
      "ora": "^9.0.0",
      "react": "19.2.3"
   },
   "devDependencies": {
      "@oclif/test": "^4.1.12",
      "@types/node": "^22.10.2",
      "@types/react": "19.2.8",
      "oclif": "^4.17.8",
      "ts-node": "^10.9.2",
      "typescript": "^5.7.2",
      "vitest": "^2.1.9"
   },
   "oclif": {
      "bin": "aix",
      "commands": {
         "strategy": "pattern",
         "target": "./dist/commands"
      },
      "dirname": "aix",
      "flexibleTaxonomy": true,
      "helpClass": "./dist/lib/help.js",
      "hooks": {
         "postrun": "./dist/hooks/postrun/patch-autocomplete.js"
      },
      "plugins": [
         "@oclif/plugin-help",
         "@oclif/plugin-version",
         "@oclif/plugin-autocomplete",
         "@oclif/plugin-not-found",
         "@oclif/plugin-update"
      ],
      "theme": "theme.json",
      "topicSeparator": " ",
      "topics": {
         "add": {
            "description": "Add skills, MCP servers, or rules to ai.json"
         },
         "config": {
            "description": "Manage aix configuration"
         },
         "list": {
            "description": "List configured skills, MCP servers, editors, or rules"
         },
         "remove": {
            "description": "Remove skills, MCP servers, or rules from ai.json"
         }
      },
      "update": {
         "s3": {
            "host": "https://github.com/a1st-dev/aix/releases/download/"
         }
      }
   }
}
