{
   "$schema": "./node_modules/oxfmt/configuration_schema.json",
   "printWidth": 100,
   "tabWidth": 3,
   "useTabs": false,
   "singleQuote": false,
   "semi": true,
   "trailingComma": "all",
   "overrides": [
      {
         "files": ["*.json", "*.jsonc"],
         "options": {
            "tabWidth": 3
         }
      }
   ],
   "ignorePatterns": [
      "**/dist/**",
      "**/node_modules/**",
      "**/.aix/**",
      "**/.astro/**",
      "package-lock.json",
      "packages/cli/oclif.manifest.json"
   ]
}
